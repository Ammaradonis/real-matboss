{
  "name": "static-sites",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "vitest run --coverage",
    "test:unit": "vitest run tests/unit --coverage",
    "test:integration": "vitest run tests/integration --coverage",
    "test:a11y": "vitest run tests/accessibility --coverage.enabled=false",
    "load:test": "node scripts/load-test.mjs",
    "phase2": "npm run test && npm run test:a11y && npm run load:test"
  },
  "vitest": {
    "test": {
      "environment": "jsdom",
      "setupFiles": [
        "tests/setup.js"
      ],
      "include": [
        "tests/**/*.test.js"
      ],
      "restoreMocks": true,
      "mockReset": true,
      "clearMocks": true,
      "coverage": {
        "provider": "v8",
        "reporter": [
          "text",
          "json-summary",
          "html"
        ],
        "include": [
          "assets/js/**/*.js"
        ],
        "exclude": [
          "assets/js/globe.js",
          "assets/js/map.js"
        ],
        "thresholds": {
          "lines": 95,
          "statements": 95,
          "functions": 95,
          "branches": 90
        }
      }
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.3",
    "jsdom": "^24.1.3",
    "vitest": "^2.1.3"
  }
}
